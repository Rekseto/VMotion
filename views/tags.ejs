            <li><a href="../<%= tag %>/<%= i %>" aria-label="Page <%= i %>"
                   class="pages-link pages-link-isActive"><%= i %></a></li>
            <% } else {%>
            <li><a href="../<%= tag %>/<%= i %>" aria-label="Page <%= i %>" class="pages-link"><%= i %></a></li>
            <%}%>
            <% }%>
        </ul></nav>
