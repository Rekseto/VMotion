<html lang="pl">
<head>
    <% include ./templates/head.ejs %>
</head>
<body>
<% include ./templates/navigation.ejs%>
<section>
    <header><h2>Artyku≈Çy</h2></header>
    <% for(var i=0; i<articles.length; i++) { %>
    <article>
            <p> &bull; <%= articles[i].author %>  <%for(var d=0; d<articles[i].tagList.length; d++) {%> &bull; <%= articles[i].tagList[d] %> <%}%></p>
        <img width="150" height="150" src="../../uploads/<%= articles[i]._id %>/<%= articles[i].images[0] %>"
